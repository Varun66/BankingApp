<Page x:Class="BankingApp.PinError"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankingApp"
      mc:Ignorable="d" 
      Title="Pin_Error" Height="350" Width="525" >

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="background_blue.png" />
        </Grid.Background>
        <TextBox HorizontalAlignment="Left" Height="39" TextWrapping="Wrap" Text="Error: Pin Input Incorrect&#xD;&#xA;" VerticalAlignment="Top" Width="315" Margin="110,51,0,0" TextChanged="TextBox_TextChanged" FontFamily="Microsoft YaHei" FontSize="24" OpacityMask="Black" Background="{x:Null}" FontWeight="ExtraBold" Foreground="White"/>
        <Button Content="Try Again" HorizontalAlignment="Left" Margin="207,152,0,0" VerticalAlignment="Top" Width="101" Height="52" Click="Return_click"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="207,226,0,0" VerticalAlignment="Top" Width="101" Height="52" Click="Exit_click"/>
    </Grid>
</Page>
